    <ImageView
        android:id="@+id/imgfem"
        android:layout_width="88dp"
        android:layout_height="80dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toStartOf="@+id/imagemasculino"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/usuario_fem" />

    <ImageView
        android:id="@+id/imginterroga1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/interrogacao"
        tools:layout_editor_absoluteX="181dp" />

    <ImageView
        android:id="@+id/imginterroga2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        app:layout_constraintTop_toBottomOf="@+id/imginterroga1"
        app:srcCompat="@drawable/interrogacao"
        tools:layout_editor_absoluteX="189dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um sÃ­mbulo!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/imgpedra"
        android:layout_width="90dp"
        android:layout_height="86dp"
        app:layout_constraintEnd_toStartOf="@+id/imgpapel"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/pedra" />

    <ImageView
        android:id="@+id/imgpapel"
        android:layout_width="91dp"
        android:layout_height="86dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/papel"
        tools:layout_editor_absoluteX="162dp" />

    <ImageView
        android:id="@+id/imgtesoura"
        android:layout_width="96dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toEndOf="@+id/imgpapel"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/tesoura" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha seu personagem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696" />

    <ImageView
        android:id="@+id/imgfeminino"
        android:layout_width="90dp"
        android:layout_height="89dp"
        app:layout_constraintEnd_toStartOf="@+id/imginterroga2"
        app:layout_constraintTop_toBottomOf="@+id/imagmaquina"
        app:srcCompat="@drawable/usuario_fem" />

    <ImageView
        android:id="@+id/imagemasculino"
        android:layout_width="90dp"
        android:layout_height="81dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/usuario_masc"
        tools:layout_editor_absoluteX="233dp" />

</androidx.constraintlayout.widget.ConstraintLayout>