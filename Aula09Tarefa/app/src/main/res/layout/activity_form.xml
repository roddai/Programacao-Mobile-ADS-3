<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes do Evento"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Nome do Evento"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFormTitle" />

        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextEventName" />

        <EditText
            android:id="@+id/editTextEventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Data do Evento (ex: 10/11/2025)"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerLocation" />

        <Spinner
            android:id="@+id/spinnerEventType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextEventDate" />

        <TextView
            android:id="@+id/textViewFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Comidas:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerEventType" />

        <CheckBox
            android:id="@+id/checkBoxSalgados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salgados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFood" />

        <CheckBox
            android:id="@+id/checkBoxDoces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doces"
            app:layout_constraintStart_toEndOf="@+id/checkBoxSalgados"
            app:layout_constraintTop_toTopOf="@+id/checkBoxSalgados" />

        <CheckBox
            android:id="@+id/checkBoxChurrasco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Churrasco"
            app:layout_constraintStart_toEndOf="@+id/checkBoxDoces"
            app:layout_constraintTop_toTopOf="@+id/checkBoxDoces" />

        <TextView
            android:id="@+id/textViewDrinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bebidas:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxSalgados" />

        <CheckBox
            android:id="@+id/checkBoxRefrigerantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refrigerantes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDrinks" />

        <CheckBox
            android:id="@+id/checkBoxCervejas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cervejas"
            app:layout_constraintStart_toEndOf="@+id/checkBoxRefrigerantes"
            app:layout_constraintTop_toTopOf="@+id/checkBoxRefrigerantes" />

        <TextView
            android:id="@+id/textViewGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Faixa de Convidados:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxRefrigerantes" />

        <RadioGroup
            android:id="@+id/radioGroupGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewGuests">

            <RadioButton
                android:id="@+id/radioButton50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Até 50 pessoas" />

            <RadioButton
                android:id="@+id/radioButton100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51 a 100 pessoas" />

            <RadioButton
                android:id="@+id/radioButtonOver100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mais de 100 pessoas" />
        </RadioGroup>

        <EditText
            android:id="@+id/editTextComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Comentários Adicionais"
            android:inputType="textMultiLine"
            android:minLines="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupGuests" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#333333"
            android:text="Voltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextComments" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#28922C"
            android:text="Próximo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>