<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvResumoTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/titulo_resumo"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelNome" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Nome do evento:" android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvResumoTitulo" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoNome" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelNome" app:layout_constraintTop_toTopOf="@id/labelNome"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelLocal" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Local:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelNome" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoLocal" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelLocal" app:layout_constraintTop_toTopOf="@id/labelLocal"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelData" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Data:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelLocal" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoData" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelData" app:layout_constraintTop_toTopOf="@id/labelData"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelTipo" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Tipo do evento:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelData" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoTipo" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelTipo" app:layout_constraintTop_toTopOf="@id/labelTipo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelComidas" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Comidas:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelTipo" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoComidas" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelComidas" app:layout_constraintTop_toTopOf="@id/labelComidas"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelBebidas" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Bebidas:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelComidas" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoBebidas" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelBebidas" app:layout_constraintTop_toTopOf="@id/labelBebidas"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelConvidados" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Convidados:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelBebidas" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoConvidados" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelConvidados" app:layout_constraintTop_toTopOf="@id/labelConvidados"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/labelComentario" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="ComentÃ¡rio:" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelConvidados" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:id="@+id/tvResumoComentario" android:layout_width="0dp" android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/labelComentario" app:layout_constraintTop_toTopOf="@id/labelComentario"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnVoltarResumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/voltar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/labelComentario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
