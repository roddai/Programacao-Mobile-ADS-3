<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvFormTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/form_title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/edNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_nome"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFormTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <CheckBox
            android:id="@+id/cbOpcao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opcao1"
            app:layout_constraintTop_toBottomOf="@+id/edNome"
            app:layout_constraintStart_toStartOf="parent"/>

        <CheckBox
            android:id="@+id/cbOpcao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opcao2"
            app:layout_constraintTop_toBottomOf="@+id/cbOpcao1"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/rgSimNao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/cbOpcao2"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rbNao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nao"/>

            <RadioButton
                android:id="@+id/rbSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sim"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tvSpinnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selecione_cor"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/rgSimNao"
            app:layout_constraintStart_toStartOf="parent"/>

        <Spinner
            android:id="@+id/spinnerCores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSpinnerLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvratingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avalie"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCores"
            app:layout_constraintStart_toStartOf="parent"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvratingLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enviar"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
