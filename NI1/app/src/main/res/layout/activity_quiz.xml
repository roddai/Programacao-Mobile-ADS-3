<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/questao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Quando você tem uma tarefa importante para fazer, o que costuma acontecer?"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <RadioButton
        android:id="@+id/rbQ2A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planejo bem e sigo o plano." />

    <RadioButton
        android:id="@+id/rbQ2B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tento organizar, mas às vezes me perco." />

    <RadioButton
        android:id="@+id/rbQ2C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deixo para a última hora ou esqueço." />

    <Button
        android:id="@+id/submitBTN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp" />

</LinearLayout>
