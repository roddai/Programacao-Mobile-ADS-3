<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/yellow"
    tools:context=".MainActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/titleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECAP PET!"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guideline para separar o título -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <!-- Seção Cães -->
    <TextView
        android:id="@+id/TitleCaes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cães"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LinearLayout horizontal para os cães -->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_border_shape"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/TitleCaes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Cão 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="96dp"
                android:layout_height="65dp"
                android:src="@drawable/pet1"/>

            <Button
                android:id="@+id/buttonCaes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes" />
        </LinearLayout>

        <!-- Cão 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="96dp"
                android:layout_height="65dp"
                android:src="@drawable/pet2"/>

            <Button
                android:id="@+id/buttonCaes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes" />
        </LinearLayout>

        <!-- Cão 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="96dp"
                android:layout_height="65dp"
                android:src="@drawable/pet3"/>

            <Button
                android:id="@+id/buttonCaes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes" />
        </LinearLayout>
    </LinearLayout>

    <!-- Seção Gatos -->
    <TextView
        android:id="@+id/titleGatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gatos"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LinearLayout horizontal para os gatos -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_border_shape"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/titleGatos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gato 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="96dp"
                android:layout_height="65dp"
                android:src="@drawable/pet6"/>

            <Button
                android:id="@+id/buttonGatos1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes" />
        </LinearLayout>

        <!-- Gato 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="96dp"
                android:layout_height="65dp"
                android:src="@drawable/pet4"/>

            <Button
                android:id="@+id/buttonGatos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes" />
        </LinearLayout>

        <!-- Gato 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="96dp"
                android:layout_height="65dp"
                android:src="@drawable/pet5"/>

            <Button
                android:id="@+id/buttonGatos3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>